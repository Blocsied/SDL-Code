<ui:ContentDialog x:Class="Turtlz_Launcher.GameLog"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Turtlz_Launcher"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Game Log"
      Background="{fw:AcrylicBrush TargetName=Grid, TintOpacity=0.75, TintColor=#1E1E1E}"
      xmlns:fw="clr-namespace:SourceChord.FluentWPF;assembly=FluentWPF"
      xmlns:ui="http://schemas.modernwpf.com/2019">

    <Grid>
        <ui:ScrollViewerEx x:Name="scrl">
            <TextBox IsReadOnly="True" Margin="0,0,15,0" TextWrapping="Wrap" BorderThickness="0" Background="Transparent" x:Name="txtLog"/>
        </ui:ScrollViewerEx>
    </Grid>
</ui:ContentDialog>
