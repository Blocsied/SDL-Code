<Window x:Class="Turtlz_Launcher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Turtlz_Launcher"
        mc:Ignorable="d"
        Title="Emerald Launcher" Height="450" Width="800"
        xmlns:ui="http://schemas.modernwpf.com/2019"
        Loaded="Window_Loaded"
        ui:WindowHelper.UseModernWindowStyle="True">
    <Grid>
        <StackPanel VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Ram:"/>
                <ui:NumberBox Minimum="1024" x:Name="txtbxRam" Text="1024"/>
            </StackPanel>
            <CheckBox Content="Skip asset download" x:Name="cbSkipAssetsDownload"/>
            <CheckBox Content="Skip hash check" x:Name="cbSkipHashCheck"/>
            <StackPanel Orientation="Horizontal">
            <TextBox IsEnabled="False" Name="txtMCPath"/>
                <Button Content="Change" x:Name="btnChangeMCpath" Click="btnChangeMCpath_Click"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock FontSize="14" VerticalAlignment="Center" Text="version"/>
                <ComboBox x:Name="cmbxVer"/>
                <Button Margin="5,0,5,0" Name="btnSetLastVersion" Click="btnSetLastVersion_Click" Content="Latest Version"/>
                <Button x:Name="btnLaunch" Click="btnLaunch_Click" Style="{StaticResource AccentButtonStyle}" FontSize="14" FontWeight="SemiBold" Content="Launch"/>
            </StackPanel>
            <Grid Margin="10" HorizontalAlignment="Stretch" VerticalAlignment="Bottom">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition  />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <TextBlock x:Name="status" Grid.Row="0" Grid.Column="0" Margin="0,0,0,5" Text="Ready"/>
                <ui:ProgressBar x:Name="Pb_File" Margin="0,0,0,5" HorizontalAlignment="Stretch" Grid.Row="1" Grid.Column="0" Height="15" />
            <ui:ProgressBar x:Name="Pb_Progress" HorizontalAlignment="Stretch" Grid.Row="2" Grid.Column="0" Height="15"/>
        </Grid>
        </StackPanel>
    </Grid>
</Window>
